{
  "name": "node-ts-template",
  "version": "1.0.0",
  "description": "Node.js typescript template",
  "repository": "git@github.com:nerjs/node-ts-template.git",
  "author": "nerjs <nerjs.stap@gmail.com>",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint ./src/*.ts",
    "clear": "rm -rf dist",
    "build": "npm run clear && tsc",
    "watch": "tsc --watch",
    "start": "nodemon --enable-source-maps ./dist",
    "start:prod": "node --enable-source-maps ./dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "29.2.4",
    "@types/reflect-metadata": "0.1.0",
    "@typescript-eslint/eslint-plugin": "5.36.1",
    "@typescript-eslint/parser": "5.36.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.3.1",
    "nodemon": "2.0.15",
    "prettier": "2.7.1",
    "ts-jest": "29.0.3"
  },
  "keywords": [
    "ts",
    "typescript",
    "node",
    "NodeJs",
    "template"
  ],
  "dependencies": {
    "@types/node": "18.11.10",
    "reflect-metadata": "0.1.13",
    "typescript": "4.9.4",
    "uuid": "9.0.0"
  }
}
